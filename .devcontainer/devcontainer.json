{
	"name": "Backend",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile",
        "target": "dev",
		"args": {
			"GO_VERSION": "1.25"
		}
    },
    "workspaceFolder": "/app",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=${localWorkspaceFolder},target=/app,type=bind",
		"source=/etc/localtime,target=/etc/localtime,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
            "settings": {
                "go.useLanguageServer": true,
				"remote.extensionKind": {
                    "ms-azuretools.vscode-docker": "workspace"
                }
			},

			"extensions": [
				"mikestead.dotenv",
				"esbenp.prettier-vscode",
				"ms-azuretools.vscode-docker",
				"bradlc.vscode-tailwindcss",
				"qwtel.sqlite-viewer"
			]
		}
	},
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"installDockerComposeSwitch": true,
			"version": "latest",
			"dockerDashComposeVersion": "v2"
		}
		// "ghcr.io/devcontainers/features/node:1": {
		// 	"installYarnUsingApt": true,
		// 	"version": "22",
		// 	"pnpmVersion": "none",
		// 	"nvmVersion": "0.39"
		// },
		// "ghcr.io/devcontainers/features/go:1": {
		// 	"version": "1.25",
		// 	"golangciLintVersion": "latest"
		// }
	}

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// ðŸ‘‡ Configure tool-specific properties.
	// "customizations": {},

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
