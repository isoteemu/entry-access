{{define "title"}}{{.code}}: {{.message}} {{end}}

{{define "content"}}
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-semibold text-red-600 mb-4">Error</h2>
        <p class="text-gray-700 mb-2">Stop codes: {{.code}}</p>
        {{if .Message}}
        <p class="text-gray-700">Message: {{.message}}</p>
        {{end}}
    </div>
{{end}}

{{define "scripts"}}
    <script type="module">
        // You can add any specific JavaScript for the error page here if needed
        console.error('Error Page Loaded: {{.code}} - {{.message}}');
        window.addEventListener('app:ready', () => {
            console.log('App is ready, reporting error to error handler.');
            // TODO: Handle multiple error codes properly
            window.errorHandler.addError('{{ index .code 0 }}', {
                message: `{{ .message }}`,
                type: 'error'
            });
        });

    </script>
{{end}}
